extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  document-start: disable
  empty-lines:
    max: 2
    level: error
  indentation:
    spaces: 2
    indent-sequences: true
  line-length:
    max: 160
  new-lines:
    type: unix
